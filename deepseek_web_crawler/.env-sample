# Required API Keys
GROQ_API_KEY="your_groq_api_key_here"

# Optional Browser Settings
BROWSER_TYPE="chromium"  # chromium, firefox, or webkit
HEADLESS="true"         # true or false
VIEWPORT_WIDTH="1280"   # browser window width
VIEWPORT_HEIGHT="800"   # browser window height

# Cache Settings
CACHE_ENABLED="true"    # true or false
CACHE_DIR=".cache"      # cache directory path

# Output Settings
OUTPUT_DIR="output"     # output directory path
TIMESTAMP_FILES="true"  # add timestamps to output files

# Logging Settings
LOG_LEVEL="INFO"        # DEBUG, INFO, WARNING, ERROR, or CRITICAL
LOG_FILE="logs/crawler.log"

# Rate Limiting
REQUESTS_PER_SECOND="2"
BURST_SIZE="5"

# Retry Settings
RETRY_COUNT="3"
RETRY_DELAY="1.0"
RETRY_BACKOFF="2.0"

# Proxy Settings (optional)
# Format: protocol://username:password@host:port
PROXY_URL=""
PROXY_FILE="proxies.json"  # path to proxy configuration file

# User Agent Settings
DEVICE_TYPE="desktop"   # desktop, mobile, or tablet

# Timeouts
REQUEST_TIMEOUT="30.0"  # seconds
WAIT_TIME="2.0"        # seconds to wait for page load